<div class="container">

    <h1 class="col-md-12 text-center">Edit Recipe</h1>
    <hr class="mb-4">
    
    <div class="row">
    <% if @recipe.errors.any? %>
        
            <div class="alert alert-danger col-md-12">
                <h5>Please correct the following errors:</h5>
                <ul>
                    <% @recipe.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        
    <% end %>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            
            <%= form_for @recipe do |f| %>
            <div class="form-group row">
                <div class="col-sm-3 text-right">
                    <%= f.label :name, class:"col-form-label" %>
                </div>
                <div class="col-sm-9">
                     <%= f.text_field :name, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 text-right">
                     <%= f.label :summary, class:"col-form-label" %>
                </div>
               
                <div class="col-sm-9">
                    <%= f.text_field :summary, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 text-right">
                    <%= f.label :description, class: "col-form-label" %>
                </div>
                
                <div class="col-sm-9">
                    <%= f.text_area :description, rows: 5, class: "form-control" %>
                </div>
            </div>
            <div class="col-sm-12 text-right">
                <%= link_to "Return", recipe_path(@recipe), class: "btn btn-dark"%> <%= f.submit 'Update Recipe', class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
    
</div>