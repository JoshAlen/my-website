<div class="container">

        <h1>All Recipes <span class="text-right"><%= link_to "New Recipe", new_recipe_path, class: "btn btn-primary text-right"%></span></h1>
        <hr class="mb-4">
        <% @recipes.each do |recipe| %>
            <div class="row">
                <div class="col-md-2">
                    <section class="chef_info text-center">
                        <%= gravatar_for recipe.chef, size: 100 %>
                        <h5>Chef name: <%= recipe.chef.chefname %></h5>
                    </section>
                </div>
                
                <div class="col-md-10 well">
                    <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
                    <p><%= recipe.summary %></p>
                    <p>
                        <span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %></small></span>
                    </p>
                </div>
            </div>
        <% end %>
        <hr/>
</div>