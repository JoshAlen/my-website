<div class="container">
    <h1><%= @recipe.name %> 
        
    </h1>
    <hr class="mb-4">
    
    <div class="row">
        <div class="col-md-4">
            <%= link_to gravatar_for(@recipe.chef, size: 200), chef_path(@recipe.chef) %>
            <p><h5>Brought to you by: <%= @recipe.chef.chefname %></h5></p>
        </div>
    
        <div class="col-md-8">
            <h3><%= @recipe.summary %></h3>
            <div class="well">
                <p><strong>Steps:</strong></p>
                <p><%= simple_format(@recipe.description) %></p>
            </div>
            <div class="text-left">
                <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
                <i class="fa fa-thumbs-o-up text-dark" aria-hidden="true"></i>
                <% end %> 
                <%= @recipe.thumbs_up_total %>
                |
                <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
                <i class="fa fa-thumbs-o-down text-dark" aria-hidden="true"></i>
                <% end %>
                <%= @recipe.thumbs_down_total %>
            </div>

        </div>
    </div>
     
    <h5><%= link_to "Return", recipes_path, class: "btn btn-dark"%> <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-dark"%></h5>

</div>