<div class="container mt-5">

    <h1 class="col-md-12 text-center">Create a new Recipe</h1>
    <hr class="mb-4">

    <div class="row">
        <div class="col-md-12 text-center">
            
            <%= form_for @recipe do |f| %>
            <div class="form-group row">
                <%= f.label :name, class:"col-sm-3 col-form-label text-right" %>
                <div class="col-sm-9">
                     <%= f.text_field :name, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :summary, class:"col-sm-3 col-form-label text-right" %>
                <div class="col-sm-9">
                    <%= f.text_field :summary, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :description, class: "col-sm-3 col-form-label text-right" %>
                <div class="col-sm-9">
                    <%= f.text_area :description, rows: 5, class: "form-control" %>
                </div>
                
            </div>
            <div class="col-sm-12 text-right">
                <%= f.submit 'Create Recipe', class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>