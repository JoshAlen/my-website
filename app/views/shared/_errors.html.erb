<div class="row">
    <% if obj.errors.any? %>
            <div class="alert alert-danger col-md-12">
                <h5>Please correct the following errors:</h5>
                <ul>
                    <% obj.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
    <% end %>
</div>