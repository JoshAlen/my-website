
<%= render 'shared/errors', obj: @contact %>
<%= render 'shared/page_title', title: "Say Hello" %>

<div class="row">
    <div class="col-md-12 text-center">
        <%= form_for @contact do |f| %>
            <div class="form-group row">
                <div class="col-sm-3 text-md-right">
                    <%= f.label :name, class:"col-form-label" %>
                </div>
                <div class="col-sm-9">
                     <%= f.text_field :name, required: true, class: "form-control" %>
                </div>
            </div>
         
            <div class="form-group row">
                <div class="col-sm-3 text-md-right">
                    <%= f.label :email, class:"col-form-label" %>
                </div>
                <div class="col-sm-9">
                     <%= f.email_field :email, required: true, class: "form-control" %>
                </div>
            </div>
             
            <div class="form-group row">
                <div class="col-sm-3 text-md-right">
                    <%= f.label :message, class:"col-form-label" %>
                </div>
                <div class="col-sm-9">
                     <%= f.text_area :message, as: :text, rows: 5, class: "form-control" %>
                </div>
            </div>
         
            <div class="hidden">
                <%= f.label :nickname %>
                <%= f.text_field :nickname, hint: 'leave this field blank' %>
            </div>
         
            <div class="col-sm-12 text-right">
                 <%= f.submit 'Send Message', class: "btn btn-primary" %>
            </div>
            <% end %>
    </div>
</div>