    <div class="row">
    <% if @chef.errors.any? %>
        
            <div class="alert alert-danger col-md-12">
                <h5>Please correct the following errors:</h5>
                <ul>
                    <% @chef.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        
    <% end %>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            
            <%= form_for @chef do |f| %>
            <div class="form-group row">
                <div class="col-sm-3 text-right">
                    <%= f.label :chefname, class:"col-form-label" %>
                </div>
                <div class="col-sm-9">
                     <%= f.text_field :chefname, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 text-right">
                     <%= f.label :email, class:"col-form-label" %>
                </div>
               
                <div class="col-sm-9">
                    <%= f.email_field :email, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 text-right">
                    <%= f.label :password, class: "col-form-label" %>
                </div>
                
                <div class="col-sm-9">
                    <%= f.password_field :password, class: "form-control" %>
                </div>
            </div>
            <div class="col-sm-12 text-right">
                 <%= f.submit(@chef.new_record? ? 'Register' : 'Edit Profile', class: "btn btn-primary") %>
            </div>
            <% end %>
        </div>
    </div>